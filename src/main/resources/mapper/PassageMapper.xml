<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.serein.mapper.PassageMapper">

    <resultMap id="BaseResultMap" type="com.serein.model.entity.Passage">
            <id property="passageId" column="passageId" jdbcType="BIGINT"/>
            <result property="authorId" column="authorId" jdbcType="BIGINT"/>
            <result property="authorName" column="authorName" jdbcType="VARCHAR"/>
            <result property="avatarUrl" column="avatarUrl" jdbcType="VARCHAR"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="thumbnail" column="thumbnail" jdbcType="VARCHAR"/>
            <result property="summary" column="summary" jdbcType="VARCHAR"/>
            <result property="categoryId" column="categoryId" jdbcType="TINYINT"/>
            <result property="pTags" column="pTags" jdbcType="VARCHAR"/>
            <result property="viewNum" column="viewNum" jdbcType="INTEGER"/>
            <result property="commentNum" column="commentNum" jdbcType="INTEGER"/>
            <result property="thumbNum" column="thumbNum" jdbcType="INTEGER"/>
            <result property="collectNum" column="collectNum" jdbcType="INTEGER"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
            <result property="accessTime" column="accessTime" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        passageId,authorId,authorName,avatarUrl,
        title,content,thumbnail,
        summary,categoryId,pTags,
        viewNum,commentNum,thumbNum,
        collectNum,createTime,updateTime,
        accessTime,status,isDelete
    </sql>
    <update id="updateViewNum">
        update blog.passage set viewNum=viewNum+1 where passageId=#{passageId};
    </update>
    <!--把未删除且审核通过的文章查询出来同步到 es  -->
    <select id="listPassageWithNODelete" resultType="com.serein.model.entity.Passage">
        select * from blog.passage where updateTime>=#{minutesAgoDate} and isDelete=1 and status=2
    </select>
</mapper>
